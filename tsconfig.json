{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "esnext",
        "rootDir": "./src",
        "outDir": "build",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/**/__tests__"]
}
